<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/recyclerview_celda_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/row_padding"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:paddingTop="@dimen/row_padding">

            <ImageView
                android:id="@+id/recyclerview_celda_imagen"
                android:layout_width="@dimen/thumbnail"
                android:layout_height="@dimen/thumbnail"
                android:layout_centerVertical="true"
                tools:src="@mipmap/ic_ejemeplo_round"
                android:scaleType="centerCrop"
                android:layout_marginRight="@dimen/row_padding" />

            <TextView
                android:id="@+id/recyclerview_celda_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/recyclerview_celda_imagen"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/contact_name"
                android:textSize="@dimen/contact_name"
                tools:text="Mila a la napo"/>

       <!--     <TextView
                android:id="@+id/recyclerview_celda_pintor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerview_celda_nombre"
                android:layout_toRightOf="@id/recyclerview_celda_imagen"
                android:textColor="@color/contact_number"
                android:textSize="@dimen/contact_number"
                android:text="Keith Haring"
                />-->

        </RelativeLayout>





    </android.support.v7.widget.CardView>



</LinearLayout>
